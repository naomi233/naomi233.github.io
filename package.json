{
  "name": "vuepress-theme-hope-template",
  "version": "2.0.0",
  "private": true,
  "description": "A project of vuepress-theme-hope",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "vuepress-vite build docs",
    "clean-dev": "vuepress-vite dev docs --clean-cache",
    "dev": "vuepress-vite dev docs",
    "postinstall": "npx simple-git-hooks",
    "prettier": "prettier -w .",
    "update-package": "pnpm dlx vp-update"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "pnpm commitlint --edit $1"
  },
  "lint-staged": {
    "*.{js,ts,scss,md}": "prettier --write",
    "package.json": "sort-package-json"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@vuepress/bundler-vite": "2.0.0-rc.9",
    "@vuepress/plugin-feed": "2.0.0-rc.24",
    "commitizen": "^4.3.0",
    "cz-git": "^1.9.1",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "simple-git-hooks": "^2.11.1",
    "sort-package-json": "^2.10.0",
    "vue": "^3.4.21",
    "vuepress": "2.0.0-rc.9",
    "vuepress-plugin-search-pro": "2.0.0-rc.35",
    "vuepress-theme-hope": "2.0.0-rc.35"
  }
}
